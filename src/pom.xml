<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- Project coordinates -->
  <parent>
    <groupId>com.google.code.flexlib</groupId>
    <artifactId>flexlib-parent</artifactId>
    <version>2.5-SNAPSHOT</version>
  </parent>
  <groupId>com.google.code.flexlib</groupId>
  <artifactId>flexlib</artifactId>
  <version>2.5-SNAPSHOT</version>
  <packaging>swc</packaging>

  <!-- Project infos -->
  <name>FlexLib :: Library</name>
  <description><![CDATA[The flexlib library.]]></description>

  <!-- Dependencies -->
  <dependencies>
    <dependency>
      <groupId>com.adobe.flex.framework</groupId>
      <artifactId>flex-framework</artifactId>
      <version>${dependency.flex-sdk.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>com.adobe.flex</groupId>
      <artifactId>compiler</artifactId>
      <version>${dependency.flex-sdk.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>com.adobe.flexunit</groupId>
      <artifactId>flexunit</artifactId>
      <version>${dependency.flexunit.version}</version>
      <type>swc</type>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <!-- Build -->
  <build>
    <sourceDirectory>${basedir}</sourceDirectory>
    <testSourceDirectory>${basedir}/../src-test</testSourceDirectory>
    <directory>${basedir}/../tmp</directory>
    <plugins>
      <plugin>
        <groupId>org.sonatype.flexmojos</groupId>
        <artifactId>flexmojos-maven-plugin</artifactId>
        <version>${plugin.flex-mojos.version}</version>
        <extensions>true</extensions>
        <inherited>false</inherited>
        <dependencies>
          <dependency>
            <groupId>com.adobe.flex.framework</groupId>
            <artifactId>flex-framework</artifactId>
            <version>${dependency.flex-sdk.version}</version>
            <type>pom</type>
          </dependency>
          <dependency>
            <groupId>com.adobe.flex</groupId>
            <artifactId>compiler</artifactId>
            <version>${dependency.flex-sdk.version}</version>
            <type>pom</type>
          </dependency>
        </dependencies>
        <configuration>
          <addMavenDescriptor>false</addMavenDescriptor>
          <namespaces>
            <namespace>
              <uri>${library.namespace}</uri>
              <manifest>${basedir}/manifest.xml</manifest>
            </namespace>
          </namespaces>
          <includeNamespaces>
            <namespace>${library.namespace}</namespace>
          </includeNamespaces>
          <output>${basedir}/../bin/${project.artifactId}.${project.packaging}</output>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
